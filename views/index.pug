extends includes/root.pug
include includes/girdi.pug

block desc
  meta(name="Description" content="MatMS. Matematik sorularını matematik işaretleriyle sorun, cevap verin.")

block topbar
  span.mat \nthroot a x

    
block content
  
  #sorular(ic-get-from="/sorular" ic-poll="10s" ic-trigger-on="load")

  script.
    let btn = document.querySelector("#btn")
    let girdi = document.querySelector("#girdi")

    btn.onclick = () => {
      girdi.classList.contains("hidden")
        ? girdi.classList.remove("hidden")
        : girdi.classList.add("hidden")
    }
    
  style.



