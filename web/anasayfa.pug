doctype html
html
  head
    script(type="text/javascript" async src="https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.7.5/MathJax.js?config=TeX-MML-AM_CHTML")
    meta(name="viewport" content="width=device-width, initial-scale=1")
- 
  let questions = [
    { 
      author: "some_guy", 
      content: "inverse of `f(x)= a^x`?",
      resCount: 3
    },
    {
      author: "loremipsum",
      content: "`fx = 2x + 1`, `(f @ g)x = 3x -2`, `gx=?`",
      resCount: 4
    }
  ]

  #app
    header
      h1 MtMS
      form#askform
        input#ask(placeholder="Soru sor..." multiline)
    #container
      #questions
        for q in questions
          .question
            a(href=q.url)= q.content
            br
            span by #{q.author}<em> #{q.resCount} responses </em>
          
